<Window x:Class="ArcGisMapDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
        mc:Ignorable="d"
        Title="ArcGIS &#x670D;&#x52A1;&#x6F14;&#x793A;" Height="600" Width="1100">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="340"/>
    </Grid.ColumnDefinitions>

    <!-- Top bar: URL + Load button -->
    <Border Grid.ColumnSpan="2" Background="#1F1F1F" Padding="10">
      <DockPanel LastChildFill="False">
        <TextBox x:Name="UrlBox" Width="700" Margin="0,0,8,0" DockPanel.Dock="Left"
                 VerticalAlignment="Center"
                 ToolTip="&#x8F93;&#x5165; ArcGIS REST &#x670D;&#x52A1; URL&#xFF0C;&#x4F8B;&#x5982;&#xFF1A;https://sampleserver6.arcgisonline.com/arcgis/rest/services/Census/MapServer"/>
        <Button x:Name="LoadBtn" Width="120" Content="&#x52A0;&#x8F7D;" Click="OnLoadClick"/>
      </DockPanel>
    </Border>

    <!-- Left: map view with a floating layer control button -->
    <Grid Grid.Row="1" Grid.Column="0">
      <esri:MapView x:Name="MapView"/>
      <Button x:Name="LayerCtlBtn"
              Content="&#x56FE;&#x5C42;"
              Width="72" Height="28"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              Margin="10"
              Click="OnLayerControlClick"/>
    </Grid>

    <!-- Right: GDB import panel -->
    <Border Grid.Row="1" Grid.Column="1" BorderBrush="#DDD" BorderThickness="0,0,0,0" Padding="12">
      <StackPanel>
        <TextBlock Text="&#x6570;&#x636E;&#x5BFC;&#x5165;" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
        <TextBlock Text="&#x9009;&#x62E9;&#x672C;&#x5730;&#x79FB;&#x52A8;&#x5730;&#x7406;&#x6570;&#x636E;&#x5E93;&#xFF1A;" Margin="0,0,0,6"/>
        <TextBox x:Name="GdbPathBox" Margin="0,0,0,6" IsReadOnly="True"/>
        <StackPanel Orientation="Horizontal">
          <Button x:Name="BrowseGdbBtn" Content="&#x6D4F;&#x89C8;..." Width="90" Click="OnBrowseGdbClick"/>
          <Button x:Name="ImportGdbBtn" Content="&#x5BFC;&#x5165;" Width="90" Margin="8,0,0,0" Click="OnImportGdbClick"/>
        </StackPanel>
        <TextBlock Text="&#x8BF4;&#x660E;&#xFF1A;&#x4EC5;&#x652F;&#x6301; .geodatabase&#xFF08;&#x79FB;&#x52A8;&#x5730;&#x7406;&#x6570;&#x636E;&#x5E93;&#xFF09;&#xFF1B;.gdb&#xFF08;&#x6587;&#x4EF6;&#x5730;&#x7406;&#x6570;&#x636E;&#x5E93;&#xFF09;&#x6682;&#x4E0D;&#x76F4;&#x63A5;&#x652F;&#x6301;"
                   TextWrapping="Wrap" Foreground="#666" Margin="0,8,0,0"/>
      </StackPanel>
    </Border>
  </Grid>
</Window>
